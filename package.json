{
  "name": "webernote",
  "description": "A real-time note app built with React, Redux, and Firebase.",
  "author": {
    "name": "Jared Williams",
    "email": "jaredwilli@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaredwilli/webernote-react"
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-eslint": "^8.0.2",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-15": "^1.0.2",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.10.0",
    "expect": "^21.2.1",
    "firebase": "^4.3.1",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "jest-enzyme": "^4.0.1",
    "lint-staged": "^4.3.0",
    "lodash": "^4.17.4",
    "material-ui": "^0.19.4",
    "mousetrap": "^1.6.1",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.7.4",
    "pretty-format": "^21.2.1",
    "prop-types": "^15.6.0",
    "prosemirror": "^0.10.1",
    "react": "^15.6.2",
    "react-codemirror": "^1.0.0",
    "react-color": "^2.13.8",
    "react-dom": "^15.6.2",
    "react-fontawesome": "^1.6.1",
    "react-redux": "^4.4.8",
    "react-router": "^4.0.0",
    "react-router-dom": "^3.0.0",
    "react-rte": "^0.15.0",
    "react-scripts": "1.0.13",
    "react-select": "^1.0.0-rc.10",
    "redux": "^3.7.2",
    "redux-logger": "^2.10.2",
    "redux-thunk": "^2.2.0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test"
  ],
  "git": {
    "scripts": {
      "pre-push": "npm run build && npm run surge-dev"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all -p build-css build-react",
    "test": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "coverage-watch": "react-scripts test --env=jsdom --coverage --watch",
    "coveralls": "cat ./coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls",
    "eject": "react-scripts eject",
    "deploy": "npm run build surge-prod",
    "styleguide": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "surge-dev": "surge -p $HOME/Sites/webernote-react/build -d webernote-dev.surge.sh",
    "surge-prod": "surge -p $HOME/Sites/webernote-react/build -d webernote.surge.sh",
    "build-react": "react-scripts build",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "firebase-server": "^0.11.0",
    "git-scripts": "^0.2.1",
    "react-test-renderer": "^15.6.2",
    "redux-devtools": "^3.4.0",
    "redux-mock-store": "^1.3.0",
    "sinon": "^4.1.2",
    "surge": "^0.19.0"
  }
}
